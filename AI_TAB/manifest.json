{
  "manifest_version": 3,
  "name": "Tab Organizer",
  "version": "1.1",
  "description": "Organize your tabs into groups using AI.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon_light-16.png",
      "32": "icons/icon_light-32.png"
    },
    "default_title": "AI Tab Grouping Settings",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon_light-16.png",
    "48": "icons/icon_light-48.png",
    "128": "icons/icon_light-128.png"
  }
}
